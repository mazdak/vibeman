{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.tsx",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "cd .. && make swagger && cd vibeman-web && bun run generate-api && bun run build.ts",
    "prebuild": "echo 'Ensuring OpenAPI spec is up to date...'",
    "test": "bun test --preload ./src/test-setup.ts",
    "test:unit": "bun test --preload ./src/test-setup.ts '**/*.test.{ts,tsx}' '!**/*.integration.test.{ts,tsx}'",
    "test:integration": "bun test --preload ./tests/integration/setup-integration.ts tests/integration",
    "generate-api": "bunx openapi-ts -i ../docs/swagger.json -o ./src/generated/api -c @hey-api/client-fetch --plugins @tanstack/react-query"
  },
  "dependencies": {
    "@hey-api/client-fetch": "^0.13.1",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.525.0",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.60.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^18.0.1",
    "@hey-api/openapi-ts": "^0.79.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "msw": "^2.10.4"
  }
}