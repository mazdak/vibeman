echo -e "${CYAN}â•‘${RESET} Workspace: ${GREEN}/workspace${RESET}                                        ${CYAN}â•‘${RESET}"
echo -e "${CYAN}â•‘${RESET} Logs:      ${GREEN}/logs${RESET}                                             ${CYAN}â•‘${RESET}"
echo -e "${CYAN}â•‘${RESET} Help:      ${YELLOW}cat ~/.claude/CLAUDE.md${RESET}                           ${CYAN}â•‘${RESET}"
echo -e "${CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}"
echo ""

# Show available tools
echo -e "${YELLOW}Available tools:${RESET}"
command -v rg >/dev/null 2>&1 && echo "  â€¢ ripgrep (rg) - fast search"
command -v fd >/dev/null 2>&1 && echo "  â€¢ fd - modern find"
command -v fzf >/dev/null 2>&1 && echo "  â€¢ fzf - fuzzy finder"
